<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ch.hevs.design">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".HomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AddWineActivity"
            android:parentActivityName=".HomeActivity" />
        <activity
            android:name=".AddPlaceActivity"
            android:parentActivityName=".AddWineActivity" />
        <activity
            android:name=".AddCepageActivity"
            android:parentActivityName=".AddWineActivity" />
        <activity
            android:name=".DetailVinActivity"
            android:parentActivityName=".HomeActivity" />
        <activity
            android:name=".AddProviderActivity"
            android:parentActivityName=".AddWineActivity" />
        <activity
            android:name=".AddOrderActivity"
            android:parentActivityName=".HomeActivity" />
        <activity android:name=".LoadingActivity"></activity>
    </application>

</manifest>